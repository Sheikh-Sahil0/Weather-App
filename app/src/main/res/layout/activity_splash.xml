<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_splash_anim"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/cloud_lottie_anim"
        app:lottie_autoPlay="true"
        android:layout_marginBottom="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txt_app_dialogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather Matters,\nWe've Got the Details"
        android:textSize="25sp"
        android:textAlignment="center"
        android:fontFamily="@font/merriweathersans_bold"
        app:layout_constraintTop_toBottomOf="@id/lottie_splash_anim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>